@model PersonaServer.Modules.AccountManagement.Models.LoginRegisterViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_MvcLayout";
}

<!-- Pills navs -->
<div class="col-md-8">
    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
               aria-controls="pills-login" aria-selected="true">Login</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
               aria-controls="pills-register" aria-selected="false">Register</a>
        </li>
    </ul>
    <!-- Pills navs -->
    <!-- Pills content -->
    <div class="tab-content">
        <div asp-validation-summary="ModelOnly" class="p-3 mb-2 text-danger fw-bolder bg-light-gradient bg-opacity-50"></div>

        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form asp-action="Login">
                <div class="text-center mb-3">
                    <p>Sign in with (Coming Soon):</p>
                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-facebook-f"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-google"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-twitter"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-github"></i>
                    </button>
                </div>
                <p class="text-center">or:</p>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="loginName" asp-for="LoginViewModel.Email" class="form-control"/>
                    <label class="form-label" for="loginName">Email</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="loginPassword" asp-for="LoginViewModel.Password" class="form-control"/>
                    <label class="form-label" for="loginPassword">Password</label>
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox" asp-for="LoginViewModel.RememberMe" id="loginCheck" checked/>
                            <label class="form-check-label" for="loginCheck"> Remember me </label>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a asp-action="ForgetPassword">Forgot password?</a>
                    </div>
                </div>
                <input type="hidden" asp-for="LoginViewModel.ReturnUrl" value="@(Model.LoginViewModel?.ReturnUrl ?? Model.RegisterViewModel?.ReturnUrl)"/>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Not a member? <a asp-action="Register">Register</a></p>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
            <form asp-action="Register" method="post">
                <div class="text-center mb-3">
                    <p>Sign up with:</p>
                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-facebook-f"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-google"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-twitter"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-github"></i>
                    </button>
                </div>

                <p class="text-center">or:</p>

                <!-- Name input -->
                <div class="form-outline mb-4">
                    <input type="text" id="registerName" asp-for="RegisterViewModel.Name" class="form-control"/>
                    <label class="form-label" for="registerName">Name</label>
                    <span asp-validation-for="RegisterViewModel!.Name" class="text-danger fw-bold"></span>
                </div>
                
                <div class="form-outline mb-4">
                    <input type="text" id="familyName" asp-for="RegisterViewModel.Name" class="form-control"/>
                    <label class="form-label" for="familyName">Family Name</label>
                    <span asp-validation-for="RegisterViewModel!.FamilyName" class="text-danger fw-bold"></span>
                </div>

                <!-- Username input -->
                <div class="form-outline mb-4">
                    <input type="text" asp-for="RegisterViewModel.UserName" id="registerUsername" class="form-control"/>
                    <label class="form-label" for="registerUsername">Username</label>
                    <span asp-validation-for="RegisterViewModel!.UserName" class="text-danger fw-bold"></span>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="registerEmail" asp-for="RegisterViewModel.Email" class="form-control"/>
                    <label class="form-label" for="registerEmail">Email</label>
                    <span asp-validation-for="RegisterViewModel!.Email" class="text-danger fw-bold"></span>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="registerPassword" asp-for="RegisterViewModel.Password" class="form-control"/>
                    <label class="form-label" for="registerPassword">Password</label>
                    <span asp-validation-for="RegisterViewModel!.Password" class="text-danger fw-bold"></span>
                </div>

                <!-- Repeat Password input -->
                <input type="hidden" asp-for="LoginViewModel.ReturnUrl" value="@(Model.RegisterViewModel?.ReturnUrl ?? Model.LoginViewModel.ReturnUrl)"/>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-3">Sign in and register!</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/Account/StaticFiles/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<!-- Pills content -->